<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_variant_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp"
    android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.CardView
        android:id="@+id/variant_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/variant_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp"
                app:fontFamily="@font/merriweather_bold"
                tools:text="@string/variant" />

            <ImageView
                android:id="@+id/tick"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="70dp"
                android:layout_marginEnd="70dp"
                tools:srcCompat="@drawable/ic_tick"/>

            <TextView
                android:id="@+id/variant_solved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:textColor="@color/cards"
                android:textSize="12sp"
                app:fontFamily="@font/merriweather_bold"
                tools:text="@string/solved" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>