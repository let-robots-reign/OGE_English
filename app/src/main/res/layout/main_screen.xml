<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#28ACE4">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/main_screen_separator"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/oge_main_screen"
        android:textAppearance="@style/logotype"
        app:fontFamily="@font/lobster"
        android:shadowColor="#7F000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1.5"/>


    <TextView
        android:id="@+id/english"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="170dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:text="@string/english"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryText"
        app:fontFamily="@font/petit_formal_script"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="171dp"
        android:background="@drawable/layout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/trainings"
            android:textColor="@color/colorPrimaryText"
            android:textSize="24sp"
            app:fontFamily="@font/lobster"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/layout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/variants"
            android:textColor="@color/colorPrimaryText"
            android:textSize="24sp"
            app:fontFamily="@font/lobster"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="310dp"
        android:background="@drawable/layout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/theory"
            android:textColor="@color/colorPrimaryText"
            android:textSize="24sp"
            app:fontFamily="@font/lobster"/>

    </RelativeLayout>

</RelativeLayout>