<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.CardView
        android:id="@+id/audio_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="480dp"
        android:layout_margin="16dp"
        android:elevation="12dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/play_pause_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ellipse"/>

        <ImageView
            android:id="@+id/play_pause_icon"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            app:srcCompat="@drawable/play_triangle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/audio_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                tools:text="@string/audio_topic2_task1"
                android:layout_marginTop="122dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                app:fontFamily="@font/roboto_regular"/>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryText"
                    app:fontFamily="@font/roboto_regular"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryText"
                    app:fontFamily="@font/roboto_regular"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryText"
                    app:fontFamily="@font/roboto_regular"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryText"
                    app:fontFamily="@font/roboto_regular"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryText"
                    app:fontFamily="@font/roboto_regular"
                    android:gravity="center"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:background="@drawable/answer_cell"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/audio_cell_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:hint="A"
                    android:inputType="textCapCharacters"/>

                <View
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:background="@drawable/answer_cell"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginStart="28dp"/>

                <EditText
                    android:id="@+id/audio_cell_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:hint="B"
                    android:inputType="textCapCharacters"/>

                <View
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:background="@drawable/answer_cell"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"/>

                <EditText
                    android:id="@+id/audio_cell_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginStart="60dp"
                    android:hint="C"
                    android:inputType="textCapCharacters"/>

                <View
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:background="@drawable/answer_cell"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="84dp"
                    android:layout_marginStart="84dp"/>

                <EditText
                    android:id="@+id/audio_cell_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="88dp"
                    android:layout_marginStart="88dp"
                    android:hint="D"
                    android:inputType="textCapCharacters"/>

                <View
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:background="@drawable/answer_cell"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="112dp"
                    android:layout_marginStart="112dp"/>

                <EditText
                    android:id="@+id/audio_cell_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="116dp"
                    android:layout_marginStart="116dp"
                    android:hint="E"
                    android:inputType="textCapCharacters"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>