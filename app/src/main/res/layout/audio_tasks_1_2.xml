<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.CardView
        android:id="@+id/audio_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="480dp"
        android:layout_margin="16dp"
        android:elevation="12dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/play_pause_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ellipse"/>

        <ImageView
            android:id="@+id/play_pause_icon"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            app:srcCompat="@drawable/play_triangle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/audio_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                tools:text="@string/audio_topic2_task1"
                android:layout_marginTop="112dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                app:fontFamily="@font/roboto_regular"
                android:textIsSelectable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="24dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="A"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"
                        app:fontFamily="@font/roboto_regular"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="B"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"
                        app:fontFamily="@font/roboto_regular"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="C"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"
                        app:fontFamily="@font/roboto_regular"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="D"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"
                        app:fontFamily="@font/roboto_regular"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/letter_e"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="E"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"
                        app:fontFamily="@font/roboto_regular"
                        android:gravity="center"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/right_answer_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="@string/right_answer_header"
                    android:textColor="@color/colorPrimaryText"
                    android:textIsSelectable="true"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:fontFamily="@font/roboto_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:background="@drawable/answer_cell"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/audio_cell_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:hint="1"
                        android:maxLength="1"
                        android:inputType="number"
                        android:digits="0123456789."
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionDone"/>

                    <View
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:background="@drawable/answer_cell"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="28dp"
                        android:layout_marginStart="28dp"/>

                    <EditText
                        android:id="@+id/audio_cell_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:hint="2"
                        android:maxLength="1"
                        android:inputType="number"
                        android:digits="0123456789."
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionDone"/>

                    <View
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:background="@drawable/answer_cell"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="56dp"
                        android:layout_marginStart="56dp"/>

                    <EditText
                        android:id="@+id/audio_cell_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:hint="3"
                        android:maxLength="1"
                        android:inputType="number"
                        android:digits="0123456789."
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionDone"/>

                    <View
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:background="@drawable/answer_cell"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="84dp"
                        android:layout_marginStart="84dp"/>

                    <EditText
                        android:id="@+id/audio_cell_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="88dp"
                        android:layout_marginStart="88dp"
                        android:hint="4"
                        android:maxLength="1"
                        android:inputType="number"
                        android:digits="0123456789."
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionDone"/>

                    <View
                        android:id="@+id/letter_e_view"
                        android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:background="@drawable/answer_cell"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="112dp"
                        android:layout_marginStart="112dp"/>

                    <EditText
                        android:id="@+id/audio_cell_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="116dp"
                        android:layout_marginStart="116dp"
                        android:hint="5"
                        android:maxLength="1"
                        android:inputType="number"
                        android:digits="0123456789."
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionDone"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/right_answer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimaryText"
                    android:textIsSelectable="true"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:fontFamily="@font/roboto_regular"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/layout_bg"
        android:text="@string/exit"
        app:fontFamily="@font/merriweather_bold"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/layout_bg"
        android:text="@string/submit"
        app:fontFamily="@font/merriweather_bold"/>

</RelativeLayout>